<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchAndWrap"
    android:orientation="vertical">

    <View
        android:id="@+id/homeTopView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:visibility="gone" />

    <com.linwei.cams.component.weight.shadow.ShadowLayout
        android:id="@+id/homeShadowLayout"
        style="@style/MatchAndWrap"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_2"
        app:hl_cornerRadius="@dimen/dp_2"
        app:hl_shadowLimit="@dimen/dp_1">

        <LinearLayout
            style="@style/MatchAndWrap"
            android:background="@drawable/ripple_bg"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10">

            <LinearLayout
                style="@style/MatchAndWrap"
                android:layout_marginTop="@dimen/dp_2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homeTagView"
                    style="@style/WrapAndWrap"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorGlobalHighText"
                    android:textSize="@dimen/sp_14"
                    tools:text="新" />

                <TextView
                    android:id="@+id/homeContentView"
                    style="@style/WrapAndWrap"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/sp_15"
                    tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容" />
            </LinearLayout>

            <com.linwei.cams.component.weight.shinebutton.ShineButton
                android:id="@+id/homeShineButtonView"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="@color/colorAccent"
                app:enable_flashing="true"
                app:siShape="@raw/common_ic_star" />

            <RelativeLayout
                style="@style/MatchAndWrap"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homeChapterView"
                    style="@style/WrapAndWrap"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/sp_11"
                    tools:text="作者" />

                <TextView
                    android:id="@+id/homeTimeView"
                    style="@style/WrapAndWrap"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/sp_11"
                    tools:text="时间" />

            </RelativeLayout>
        </LinearLayout>
    </com.linwei.cams.component.weight.shadow.ShadowLayout>
</LinearLayout>